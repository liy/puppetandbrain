{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ],
    "headers": [{
        "source": "**/*.@(json|info.json|atlas|png|jpg|mp3|ogg)",
        "headers": [{
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key" : "Cache-Control",
            "value" : "no-cache"
          }
        ]
      },
      {
        "source": "/index.js",
        "headers": [{  
            "key" : "Cache-Control",
            "value" : "no-cache"
          }
        ]
      }
    ]
  }
}